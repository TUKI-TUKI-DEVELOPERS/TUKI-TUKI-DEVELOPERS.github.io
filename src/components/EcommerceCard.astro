---
const { project } = Astro.props;

/* host + pathname sin barra final */
const u       = new URL(project.link);
const cleaned = (u.hostname + u.pathname).replace(/\/$/, '');
---

<article class="card-hover space-y-4 max-w-[350px] mx-auto" data-animate>
  <div class="w-full aspect-[4/3] overflow-hidden rounded-lg border"
       style="border-color:var(--brand-dark)">
    <img src={project.image}
         alt={project.title}
         class="w-full h-full object-cover" />
  </div>

  <h3 class="text-xl font-semibold text-center">{project.title}</h3>
  <p class="text-center text-sm">{project.description}</p>

  <p class="text-center">
    <a href={project.link}
       target="_blank"
       rel="noopener"
       class="underline hover:text-[var(--brand-accent)]">
      {cleaned}
    </a>
  </p>
</article>
